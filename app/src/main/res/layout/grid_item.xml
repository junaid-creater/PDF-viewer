<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:background="@drawable/shadow_14">

    <ImageView
        android:id="@+id/grid_file_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/pdf_img"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/grid_file_name"
        android:layout_below="@id/grid_file_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:background="@color/white"
        android:text="My File.pdf"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/grid_file_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_below="@+id/grid_file_name"
        android:background="@color/white"
        android:text="date"
        android:textColor="#000000"
        android:textSize="15dp" />
    <ImageView
        android:id="@+id/grid_file_options"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/share"

        />

</RelativeLayout>